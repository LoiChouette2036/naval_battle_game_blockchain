<h1>Game Details</h1>

<div class="presentation">
  <p>Creator: <%= @game.creator.username %></p>
  <p>Opponent: <%= @game.opponent&.username || "Waiting for an opponent" %></p>
  <p>Status: <%= @game.status %></p>
  <p>Current Player: <%= @game.current_player&.username || "Waiting for players to join" %></p>
</div>

<div class="container-board">
  <h2>Your Board</h2>
  <table id="player-board" data-game-id="<%= @game.id %>" aria-label="Player Board">
    <% 10.times do |x| %>
      <tr>
        <% 10.times do |y| %>
          <td id="cell-<%= x %>-<%= y %>" data-x="<%= x %>" data-y="<%= y %>" aria-label="Cell <%= x %>, <%= y %>"></td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>

<div id="ship-selection" class="ship-selection" style="margin-top: 20px;">
  <div class="ship" draggable="true" data-size="5" data-direction="horizontal" style="width: 200px;">Carrier (5)</div>
  <div class="ship" draggable="true" data-size="4" data-direction="horizontal" style="width: 160px;">Battleship (4)</div>
  <div class="ship" draggable="true" data-size="3" data-direction="horizontal" style="width: 120px;">Cruiser (3)</div>
  <div class="ship" draggable="true" data-size="3" data-direction="horizontal" style="width: 120px;">Submarine (3)</div>
  <div class="ship" draggable="true" data-size="2" data-direction="horizontal" style="width: 80px;">Destroyer (2)</div>
</div>
